{# empty Twig template #}
<!DOCTYPE html>
<head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
 {% block stylesheets %}
        <link href="{{ asset('build/app.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}   
</head>
<br /> <br />
<form action="getAll">
    <input class="btn btn-primary btn-lg" style="vertical-align: center; margin-left:45%;" type="submit" value="Get All Logs" />
</form>
    <form method="POST" action="getForm">
        <div class="container custom" {#style="margin-top:100px;height:500px; width:400px; border: 1px solid lightgrey;vertical-align: center;padding:20px;#}">
            <div style="vertical-align: center;">
            <div class="input-group mb-3 mg-5">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Departure Country</span>
                </div>
                <select class="form-control" name="departure">
                    {% for country in data %}
                        <option value="{{country.alpha}}"  {% if country.currency == "PLN" %} selected {% endif %} >{{country.capital}}({{country.name}})</option>
                    {% endfor %}
                </select>

            </div>
            <div class="input-group mb-3 mg-5">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Arrival Country</span>
                </div>
                <select class="form-control" name="arrival">
                    {% for country in data %}
                        <option value="{{country.alpha}}">{{country.capital}}({{country.name}})</option>
                    {% endfor %}
                </select>

            </div>

            <div class="input-group mb-3 mg-5">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Amount</span>
                 
                </div>
              
                <input type="text" name="from_currency" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
            </div>
                  {% if error.amount is defined %}
                    <div class="alert alert-warning" role="alert">
                        {{ error.amount }}
                    </div>
                {% endif %}
               



            <br />

            <input type="submit"  class="btn btn-primary btn-lg" name="submit" style="margin-left:30%;"value="Calculate!"/>
            </div>
        </div>
</form>

